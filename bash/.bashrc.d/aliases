# -F = display characters after non-files.
# -G = enable colorized output  (set colors with LSCOLORS)
# -a = all files (even hidden files)
# -h = use unit suffixes
# -l = long format
# -t = sort by date/time modified
alias l='ls -FGahl'
alias ll='ls -FGahl'
alias lst='ls -FGahlt'

# safer versions of mv and rm
alias mv='mv -vn'
alias rm='rm -i'
alias cp='cp -vn'

# du to display human-readable, by default.
alias du='du -h'

## App-specific short-hands
alias baty='bat --language yaml'
alias git=git-together
alias gitwith="git with --clear; git with --global"
alias k=kubectl
